<scenario>
    
    
    <return/>
    
    
    <secret id="apiKey" name="rottenTomatoesApiKey"/>
    <rest id="res" method="get"
        target="http://api.rottentomatoes.com/api/public/v1.0/movies.json?q=love&amp;page_limit=11&amp;page=1&amp;apikey=${apiKey.decrypted}" />
    <print>Rotten Tomatoes</print>
    <print><toXml>${res}</toXml></print>
    <iterate list="${res.body.movies}">
        <print>${var.title} (${var.year}) ${var.ratings.audience_score}</print>
    </iterate>
</scenario>

