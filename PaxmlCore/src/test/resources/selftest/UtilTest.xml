  <fail if="?{empty(askh.djkas.asds.ddw) and (ai.incrementAndGet() == 0)}" >Failing on empty() function 2, ai=${ai.intValue()}</fail>
  
  <assert expected="2" actual="${ai.intValue()}"/>
  
